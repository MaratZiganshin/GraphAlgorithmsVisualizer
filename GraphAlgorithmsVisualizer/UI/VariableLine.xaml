<UserControl x:Class="GraphAlgorithmsVisualizer.UI.VariableLine"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GraphAlgorithmsVisualizer.UI"
             mc:Ignorable="d" 
             x:Name="THIS"
             d:DesignHeight="460" d:DesignWidth="460">
    <UserControl.Resources>
        <local:PercentageConverter x:Key="PercentageConverter"/>
    </UserControl.Resources>
    <StackPanel Orientation="Horizontal">
        <Border BorderThickness="1" BorderBrush="Gray">
            <TextBlock x:Name="variableName" Width="230"></TextBlock>
        </Border>
        <Border BorderThickness="1" BorderBrush="Gray">
            <TextBlock x:Name="variableValue" Width="230" TextWrapping="Wrap"></TextBlock>
        </Border>
    </StackPanel>
</UserControl>
